{# base layout #}
<html>
    <head>
        {% block head %}
            <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
        {% endblock %}
        {% block stylesheets %}
            <link href="{{ asset('/bundles/chrisdisswebsite/css/chrisdiss.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body
        {% if bodyid is defined %}id="{{ bodyid }}"{% endif %}
    >
        <h1>{% block title %}ChrisDiss{% endblock %}</h1>

        {% block body %}
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-message">
                    <em>Notice</em>: {{ flashMessage }}
                </div>
            {% endfor %}

            <div class="content">
                {% block content %}{% endblock %}
            </div>
        {% endblock %}

        {% block javascripts %}{% endblock %}
    </body>
</html>
