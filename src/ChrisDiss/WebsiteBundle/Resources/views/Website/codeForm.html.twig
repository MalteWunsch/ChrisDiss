{% extends 'ChrisDissWebsiteBundle::layout.html.twig' %}

{% set bodyid = 'codeForm' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/chrisdisswebsite/css/code-form.css') }}" rel="stylesheet" />
{% endblock %}

{% set heading = 'Willkommen bei mfa-praxis.de' %}

{% block content %}
    <p>
        Bitte geben Sie Ihren 5-stelligen Code ein, um fortzufahren.
    </p>

    {{ form_start(form) }}
        {% if (form.vars.valid == false) %}
            <div class="errors">
                Sie haben leider einen ung√ºltigen Code eingegeben. Bitte versuchen Sie es erneut.
            </div>
        {% endif %}

        {{ form_label(form.code) }}
        {{ form_errors(form.code) }}
        {{ form_widget(form.code) }}

        {{ form_widget(form.save) }}
    {{ form_end(form) }}
{% endblock %}
